@model K22CNT2_TRANVANMINH_tvm_2210900112.Models.DON_HANG

@{
    ViewBag.Title = "Edit";
    List<K22CNT2_TRANVANMINH_tvm_2210900112.ModelsViews.DH_ChiTiet> chiTiet = ViewBag.donHangChiTiet as List<K22CNT2_TRANVANMINH_tvm_2210900112.ModelsViews.DH_ChiTiet>;
}

<h2>Thông tin đơn hàng</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>DON_HANG</h4>
    <hr />
    @Html.HiddenFor(model => model.ID)

    <div class="form-group">
        <label class="control-labei col-md-2  "> Mã đơn hàng: </label>
        <div class="col-md-10">
            <span> @Model.MaDH</span>
        </div>
    </div>

    <div class="form-group">
        <label class="control-labei col-md-2  "> Ngày đặt:</label>
        <div class="col-md-10">
            <span>@Model.Ngay_dat.Value.ToString("dd/MM/yyyy")</span>
        </div>
    </div>

    <div class="form-group">
        <label class="control-labei col-md-2  "> Tên người nhận: </label>
        <div class="col-md-10">
            <span> @Model.Ten_Nguoi_Nhan</span>
        </div>
    </div>


    <div class="form-group">
        <label class="control-labei col-md-2  "> Địa chỉ nhận: </label>
        <div class="col-md-10">
            <span> @Model.Dia_Chi_Nhan</span>
        </div>
    </div>


    <div class="form-group">
        <label class="control-labei col-md-2  "> Điện thoại nhận: </label>
        <div class="col-md-10">
            <span> @Model.Dia_Chi_Nhan</span>
        </div>
    </div>

    <div class="form-group">
        <label class="control-labei col-md-2  "> Tổng hoá đơn </label>
        <div class="col-md-10">
            <span> @Model.Tong_tien</span>
        </div>
    </div>

    <div class="form-group">
        <label class="control-labei col-md-2  ">Trạng thái hiện tại của hoá đơn: </label>
        <div class="col-md-10">
            <select class="form-control" name=" Trang_thai">
                <option value="0" @{ if (Model.Trang_thai == 0) { <text> selected </text>  ; }}>Chờ xử lí</option>
                <option value="1" @{ if (Model.Trang_thai == 1) { <text> selected </text>  ; }}>Đang xử lí</option>
                <option value="2" @{ if (Model.Trang_thai == 2) { <text> selected </text> ; }}>Đang hoàn thành</option>
            </select>
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Cập nhật đơn hàng" class="btn btn-default" />
        </div>
    </div>
</div>
}
<h2> Chi tiết đơn hàng mua</h2>
<table>
    <thead>
        <tr>
            <th>Mã</th>
            <th>Sản phẩm</th>
            <th>Ảnh</th>
            <th>Giá</th>
            <th>Số lượng</th>
            <th>Tổng tiền</th>
            <th>Hành động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in chiTiet)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>@item.Image</td>
                <td>@item.Price</td>
                <td> @item.Qty </td>
                
                <td>@item.Total </td>
            </tr>
    }
    </tbody>
</table>
<div>
    @Html.ActionLink("Back to List", "Index")
</div>
