@model K22CNT2_TRANVANMINH_tvm_2210900112.Bussiness.ShoppingCart

@{
    ViewBag.Title = "Giỏ hàng của bạn";
}

<h2>Giỏ hàng của bạn</h2>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>Mã</th>
            <th>Sản phẩm</th>
            <th>Ảnh</th>
            <th>Giá</th>
            <th>Số lượng</th>
            <th>Tổng tiền</th>
            <th>Hành động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Items)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>
                    <img src="@item.Image" alt="@item.Name" style="width: 50px; height: 50px;" />
                </td>
                <td>@item.Price.ToString("C")</td>
                <td>@item.Qty
                       <input type="number" value="@item.Qty" name="qty"
                </td>
                <td>@item.Total.ToString("C")</td>
                <td>
                    <a href="javascrtpt:void(0)" onclick="UpdateCartItem()">Cập nhật</a>
                    @Html.ActionLink("Xóa", "RemoveFromCart", "Cart", new { productId = item.Id }, new { @class = "btn btn-danger" })
                </td>
            </tr>
        }
    </tbody>
</table>

<p><strong>Tổng cộng:</strong> @Model.GetTotal().ToString("C")</p>

<a href="Cart/ThongTinThanhToan">Thanh toán</a>
